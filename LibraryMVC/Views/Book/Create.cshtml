@model LibraryMVC.Models.Book
<div style="height:230px">
<form asp-controller="Book" asp-action="Create" method="post">
        <table style="width:70%;margin-top:-30px;">
            <thead style="background-color:#FFEBCD">
                <tr>
                    <th>Kitap Numarası</th>
                    <td> <input asp-for="Id" /></td>
                </tr>
                <tr>
                    <th>Kitap Adı</th>
                    <td> <input asp-for="Name" /></td>
                </tr>
                <tr>
                    <th>Yazar Adı:</th>
